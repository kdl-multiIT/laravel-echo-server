# Laravel Echo Server Configuration
# Copy this file to .env and customize your settings

# Authentication settings
LARAVEL_ECHO_SERVER_AUTH_HOST=http://cargo-online.localhost
LARAVEL_ECHO_SERVER_AUTH_ENDPOINT=/socket/auth

# Server settings
LARAVEL_ECHO_SERVER_HOST=localhost
LARAVEL_ECHO_SERVER_PORT=6003
LARAVEL_ECHO_SERVER_PROTOCOL=http
LARAVEL_ECHO_SERVER_DEV_MODE=true

# Database settings
LARAVEL_ECHO_SERVER_DATABASE=redis

# Redis configuration
LARAVEL_ECHO_SERVER_REDIS_HOST=localhost
LARAVEL_ECHO_SERVER_REDIS_PORT=6379
LARAVEL_ECHO_SERVER_REDIS_PASSWORD=
LARAVEL_ECHO_SERVER_REDIS_DB=0
LARAVEL_ECHO_SERVER_REDIS_KEY_PREFIX=

# SQLite configuration
LARAVEL_ECHO_SERVER_SQLITE_PATH=/database/laravel-echo-server.sqlite

# SSL/TLS settings
LARAVEL_ECHO_SERVER_SSL_CERT_PATH=
LARAVEL_ECHO_SERVER_SSL_KEY_PATH=
LARAVEL_ECHO_SERVER_SSL_CERT_CHAIN_PATH=
LARAVEL_ECHO_SERVER_SSL_PASSPHRASE=
LARAVEL_ECHO_SERVER_SECURE_OPTIONS=67108864

# CORS settings for Socket.IO
LARAVEL_ECHO_SERVER_CORS_ORIGIN=*
LARAVEL_ECHO_SERVER_CORS_METHODS=GET,POST
LARAVEL_ECHO_SERVER_CORS_HEADERS=Origin,Content-Type,X-Auth-Token,X-Requested-With,Accept,Authorization,X-CSRF-TOKEN,X-Socket-Id
LARAVEL_ECHO_SERVER_CORS_CREDENTIALS=true

# Subscriber settings
LARAVEL_ECHO_SERVER_HTTP_SUBSCRIBER=false
LARAVEL_ECHO_SERVER_REDIS_SUBSCRIBER=true

# API CORS settings
LARAVEL_ECHO_SERVER_API_ALLOW_CORS=true
LARAVEL_ECHO_SERVER_API_ALLOW_ORIGIN=*
LARAVEL_ECHO_SERVER_API_ALLOW_METHODS=GET, PUT, POST, DELETE, HEAD, OPTIONS
LARAVEL_ECHO_SERVER_API_ALLOW_HEADERS=Origin, Content-Type, X-Auth-Token, X-Requested-With, Accept, Authorization, X-CSRF-TOKEN, X-Socket-Id

# Channel settings
LARAVEL_ECHO_SERVER_ALLOW_PRIVATE_CHANNELS=true